    <style name="text_input">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_font_size_16</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">@dimen/inputs_height</item>
    </style>

    <style name="about_input">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_font_size_16</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
